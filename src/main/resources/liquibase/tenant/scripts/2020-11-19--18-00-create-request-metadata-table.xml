<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <changeSet id="2020-11-19--18-00-create-request-metadata-table.xml" author="Illia Borysenko">
    <createTable tableName="request_metadata_lb">
      <column name="request_id" type="uuid">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="last_updated_date" type="timestamptz">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2020-11-19--18-00-change-json-to-text-column-in-instances-table.xml" author="Illia Daliek">
    <modifyDataType tableName="instances" columnName="json" newDataType="text" schemaName="${database.defaultSchemaName}"/>
  </changeSet>

</databaseChangeLog>
